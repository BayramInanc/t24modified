<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="2dp"
    app:elevation="2dp">

    <RelativeLayout
        android:id="@+id/newsCardBackgroundLayout"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="125dp"
            android:layout_width="match_parent"
            android:id="@+id/newsImage">


        </ImageView>

        <LinearLayout
            android:id="@+id/newsTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="@color/DarkTransparent"
            android:layout_marginTop="75dp">

            <TextView
                android:padding="4dp"
                android:textSize="15sp"

                android:id="@+id/newsTitleTv"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:paddingLeft="4dp"

            android:textSize="10sp"
            android:layout_below="@+id/newsTitleLayout"
            android:id="@+id/publishingDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newsExcerptTv"
            android:layout_below="@+id/publishingDateTv"
            android:textSize="12sp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>